'use client';

export const dynamic = 'force-dynamic';

import { useState } from 'react';
import { useRouter } from 'next/navigation';
import { createClient } from '@supabase/supabase-js';
import Navigation from '../components/Navigation';
import Disclaimer from '../components/Disclaimer';

// Initialize Supabase client with validation
function initializeSupabase() {
  const supabaseUrl = process.env.NEXT_PUBLIC_SUPABASE_URL;
  const supabaseAnonKey = process.env.NEXT_PUBLIC_SUPABASE_ANON_KEY;
  
  if (!supabaseUrl || !supabaseAnonKey) {
    console.error('❌ Supabase not configured. Set NEXT_PUBLIC_SUPABASE_URL and NEXT_PUBLIC_SUPABASE_ANON_KEY');
    return createClient('https://placeholder.supabase.co', 'placeholder-key');
  }
  
  return createClient(supabaseUrl, supabaseAnonKey);
}

const supabase = initializeSupabase();

/**
 * GRIT CLUB - RULER/ABERCROMBIE AESTHETIC
 * High-contrast, moody, symmetrical carrier registration
 * Authority, Structure, Premium
 */
export default function GritClubRegistration() {
  const router = useRouter();
  
  const [formData, setFormData] = useState({
    fullName: '',
    email: '',
    password: '',
    companyName: '',
    mcNumber: '',
    complianceDate: '',
    zipCode: '',
    cargoPolicyNumber: '',
    autoLiabilityPolicyNumber: '',
  });

  const [isLoading, setIsLoading] = useState(false);
  const [error, setError] = useState('');

  const handleInputChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    const { name, value } = e.target;
    setFormData({ ...formData, [name]: value });
  };

  const handleSubmit = async (e: React.FormEvent<HTMLFormElement>) => {
    e.preventDefault();
    setError('');

    const zipRegex = /^\d{5}(?:-\d{4})?$/;
    if (!zipRegex.test(formData.zipCode)) {
      setError('ENTER A VALID US ZIP CODE.');
      return;
    }
    if (!formData.cargoPolicyNumber.trim() || !formData.autoLiabilityPolicyNumber.trim()) {
      setError('INSURANCE POLICY NUMBERS ARE REQUIRED FOR VETTING.');
      return;
    }

    setIsLoading(true);

    try {
      const response = await fetch('/api/auth/register', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          email: formData.email,
          password: formData.password,
          userType: 'Carrier',
          complianceDate: formData.complianceDate,
          companyName: formData.companyName,
          zipCode: formData.zipCode,
          cargoPolicyNumber: formData.cargoPolicyNumber,
          autoLiabilityPolicyNumber: formData.autoLiabilityPolicyNumber,
        }),
      });

      const data = await response.json();

      if (!response.ok) {
        setError(data.error?.toUpperCase() || 'REGISTRATION FAILED. PLEASE VERIFY YOUR CREDENTIALS.');
        setIsLoading(false);
        return;
      }

      const { error: signInError } = await supabase.auth.signInWithPassword({
        email: formData.email,
        password: formData.password,
      });

      if (signInError) {
        setError('REGISTRATION SUCCESSFUL. PLEASE LOG IN MANUALLY TO CONTINUE.');
        setIsLoading(false);
        return;
      }

      router.push('/carrier-dashboard');
    } catch (err) {
      console.error('Registration error:', err);
      setError('AN UNEXPECTED ERROR OCCURRED. PLEASE TRY AGAIN.');
      setIsLoading(false);
    }
  };

  return (
    <div>
      <Navigation />
      <div className="relative min-h-screen flex items-center justify-center bg-charcoal font-sans antialiased py-32">
        {/* Background: Symmetrical Night Shot with Heavy Charcoal Overlay */}
        <div 
          className="absolute inset-0 bg-cover bg-center grayscale opacity-30"
          style={{
            backgroundImage: "url('https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?q=80&w=2070')",
          }}
        />
        <div className="absolute inset-0 bg-charcoal/75" />

        {/* The Center "Gatekeeper" Card - No rounded corners, extreme padding */}
        <div className="relative z-10 w-full max-w-lg bg-white p-20 rounded-none">
        <header className="mb-16 text-center border-b border-charcoal/10 pb-8">
          <p className="text-[9px] tracking-[0.5em] text-charcoal/40 uppercase mb-4">
            The Grit Club
          </p>
          <h1 className="font-serif font-bold text-4xl tracking-[0.3em] text-charcoal uppercase mb-4">
            Apply For Access
          </h1>
          <p className="mt-4 text-[10px] tracking-[0.3em] text-charcoal/60 uppercase">
            Carrier Vetting • Insurance Verification • Federal Compliance
          </p>
        </header>

        {error && (
          <div className="mb-8 p-4 bg-charcoal/5 border border-charcoal/20">
            <p className="text-[9px] text-charcoal/70 uppercase tracking-wider text-center">{error}</p>
          </div>
        )}

        <form onSubmit={handleSubmit} className="space-y-8">
          <div className="group border-b border-charcoal/20 pb-2">
            <label className="block text-[10px] font-bold text-charcoal uppercase tracking-[0.15em] mb-2">
              Full Name
            </label>
            <input 
              type="text"
              name="fullName"
              placeholder="LEGAL NAME"
              value={formData.fullName}
              onChange={handleInputChange}
              required
              className="w-full bg-transparent border-none p-0 focus:ring-0 text-sm placeholder-charcoal/20 uppercase"
            />
          </div>

          <div className="group border-b border-charcoal/20 pb-2">
            <label className="block text-[10px] font-bold text-charcoal uppercase tracking-[0.15em] mb-2">
              Company Entity
            </label>
            <input 
              type="text"
              name="companyName"
              placeholder="LEGAL COMPANY NAME"
              value={formData.companyName}
              onChange={handleInputChange}
              required
              className="w-full bg-transparent border-none p-0 focus:ring-0 text-sm placeholder-charcoal/20 uppercase"
            />
          </div>

          <div className="group border-b border-charcoal/20 pb-2">
            <label className="block text-[10px] font-bold text-charcoal uppercase tracking-[0.15em] mb-2">
              Email Address
            </label>
            <input 
              type="email"
              name="email"
              placeholder="COMPANY EMAIL"
              value={formData.email}
              onChange={handleInputChange}
              required
              className="w-full bg-transparent border-none p-0 focus:ring-0 text-sm placeholder-charcoal/20 uppercase"
            />
          </div>

          <div className="group border-b border-charcoal/20 pb-2">
            <label className="block text-[10px] font-bold text-charcoal uppercase tracking-[0.15em] mb-2">
              Password
            </label>
            <input 
              type="password"
              name="password"
              placeholder="CREATE SECURE PASSWORD"
              value={formData.password}
              onChange={handleInputChange}
              required
              className="w-full bg-transparent border-none p-0 focus:ring-0 text-sm placeholder-charcoal/20"
            />
          </div>

          <div className="group border-b border-charcoal/20 pb-2">
            <label className="block text-[10px] font-bold text-charcoal uppercase tracking-[0.15em] mb-2">
              MC Number
            </label>
            <input 
              type="text"
              name="mcNumber"
              placeholder="MOTOR CARRIER NUMBER"
              value={formData.mcNumber}
              onChange={handleInputChange}
              className="w-full bg-transparent border-none p-0 focus:ring-0 text-sm placeholder-charcoal/20 uppercase"
            />
          </div>

          <div className="group border-b border-charcoal/20 pb-2">
            <label className="block text-[10px] font-bold text-charcoal uppercase tracking-[0.15em] mb-2">
              Base Location
            </label>
            <input 
              type="text"
              name="zipCode"
              placeholder="ZIP CODE"
              value={formData.zipCode}
              onChange={handleInputChange}
              required
              className="w-full bg-transparent border-none p-0 focus:ring-0 text-sm placeholder-charcoal/20 uppercase"
            />
            {formData.zipCode.startsWith('84') && (
              <div className="mt-3 flex items-center gap-2 px-3 py-2 bg-forest">
                <svg className="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" strokeWidth={2}>
                  <path strokeLinecap="round" strokeLinejoin="round" d="M5 13l4 4L19 7" />
                </svg>
                <span className="text-white text-[9px] font-bold tracking-[0.15em] uppercase">
                  Priority Region Detected
                </span>
              </div>
            )}
          </div>

          <div className="pt-4 border-t border-charcoal/10">
            <h3 className="text-[10px] font-bold text-charcoal uppercase tracking-[0.15em] mb-6">
              Insurance and Financial Vetting
            </h3>
            
            <div className="space-y-6">
              <div className="group border-b border-charcoal/20 pb-2">
                <label className="block text-[9px] text-charcoal/60 uppercase tracking-[0.15em] mb-2">
                  Cargo Policy Number
                </label>
                <input 
                  type="text"
                  name="cargoPolicyNumber"
                  placeholder="POLICY NUMBER"
                  value={formData.cargoPolicyNumber}
                  onChange={handleInputChange}
                  required
                  className="w-full bg-transparent border-none p-0 focus:ring-0 text-sm placeholder-charcoal/20 uppercase"
                />
              </div>

              <div className="group border-b border-charcoal/20 pb-2">
                <label className="block text-[9px] text-charcoal/60 uppercase tracking-[0.15em] mb-2">
                  Auto Liability Policy
                </label>
                <input 
                  type="text"
                  name="autoLiabilityPolicyNumber"
                  placeholder="POLICY NUMBER"
                  value={formData.autoLiabilityPolicyNumber}
                  onChange={handleInputChange}
                  required
                  className="w-full bg-transparent border-none p-0 focus:ring-0 text-sm placeholder-charcoal/20 uppercase"
                />
              </div>

              <div className="group border-b border-charcoal/20 pb-2">
                <label className="block text-[9px] text-charcoal/60 uppercase tracking-[0.15em] mb-2">
                  Compliance Date
                </label>
                <input 
                  type="date"
                  name="complianceDate"
                  value={formData.complianceDate}
                  onChange={handleInputChange}
                  className="w-full bg-transparent border-none p-0 focus:ring-0 text-sm text-charcoal uppercase"
                />
              </div>
            </div>
          </div>
6 text-[10px] font-sans font-bold tracking-[0.3em] uppercase transition-colors hover:bg-black rounded-none disabled:opacity-50"
          >
            {isLoading ? 'PROCESSING APPLICATION...' : 'Submit Application'}
          </button>
        </form>

        <footer className="mt-16 text-center">
          <p className="text-[9px] leading-relaxed text-charcoal/40 uppercase tracking-[0.3em] font-sans">
            All submissions are reviewed by a Vetting Officer. <br />
            Credentials will be cross-referenced against federal and private databases.<br />
            This process is required for platform access.
          </p>
        </footer>
      </div>
    </div>
    <Disclaimer />
    </div>
  );
}
